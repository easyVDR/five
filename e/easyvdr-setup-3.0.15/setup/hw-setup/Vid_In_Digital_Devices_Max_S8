#!/bin/bash
#
#################################################

## Laedt den DD-Bridge-Treiber mit passenden Parametern fuer die Max S8

Module_Conf="/etc/modprobe.d/easyvdr-dvb-DD_Max_S8.conf"


ENTRY1="options ddbridge fmode=1"
ENTRY2="options ddbridge msi=1"

modprobe -r ddbridge
  echo "#"                                       > $Module_Conf
  echo "#--------------------------------"      >> $Module_Conf
  echo "# generated by \"Vid_In_DD_Max_S8\" "   >> $Module_Conf
  echo "# setzt Parameter fuer die Max S8  "    >> $Module_Conf
  echo "#"                                      >> $Module_Conf
  echo "$ENTRY1"                                >> $Module_Conf
  echo "$ENTRY2"                                >> $Module_Conf
  echo "#"                                      >> $Module_Conf
  echo "#"                                      >> $Module_Conf
  echo "# fmode=0: demod 0 & 4 on input 0, demod 1 & 5 on input 1, etc."     >> $Module_Conf
  echo "# fmode=1: connect all lines to QUAD LNB"                            >> $Module_Conf
  echo "# fmode=2: connect to QUATTRO LNB: input 0=V,L, 1=H,L, 2=V,H, 3=H,H" >> $Module_Conf
  echo "# fmode=3: all demods on input 0 eg. for Unicable"                   >> $Module_Conf
  echo "#"                                                                   >> $Module_Conf
  echo "# msi=0 oder msi=1 ist wohl abhaengig vom MoBo"                      >> $Module_Conf
  echo "#------------------------------------------------------------------" >> $Module_Conf
modprobe ddbridge

# ggf. zusaetzlich in der
# /etc/init/easyvdr-systemstart.conf
# im Block "prestart-script"
# das sleep erhoehen...
# oder in den BIOS-Einstellungen
# PCIE1 Link Speed von Auto auf Gen3
