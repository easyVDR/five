#!/bin/bash
#
#################################################

## Laedt den Treiber der TeVii mit passenden Parametern fuer den IR

Module_Conf="/etc/modprobe.d/easyvdr-TeVii_S470.conf"


ENTRY1="options cx23885 enable_885_ir=1"

modprobe -r cx23885
  echo "#"                                       > $Module_Conf
  echo "#--------------------------------"      >> $Module_Conf
  echo "# generated by \"Remot_IR_der_TeVii\" " >> $Module_Conf
  echo "# setzt Parameter fuer die TeVii S470  ">> $Module_Conf
  echo "#"                                      >> $Module_Conf
  echo "$ENTRY1"                                >> $Module_Conf
  echo "#"                                      >> $Module_Conf
  echo "#--------------------------------"      >> $Module_Conf
modprobe cx23885

