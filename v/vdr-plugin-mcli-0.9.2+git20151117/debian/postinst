#!/bin/sh

set -e

case "$1" in
    configure)
        chown -R vdr:vdr /var/lib/vdr/plugins/mcli.conf
		mv /usr/lib/vdr/plugins/libvdr-mcli.so  /usr/lib/vdr/plugins/libvdr-mcli.so.2.2.0
		mv /usr/share/locale/de_DE/LC_MESSAGES/de_DE.mo /usr/share/locale/de_DE/LC_MESSAGES/vdr-mcli.mo  
		mv /usr/share/locale/nl_NL/LC_MESSAGES/nl_NL.mo /usr/share/locale/nl_NL/LC_MESSAGES/vdr-mcli.mo 

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0

#DEBHELPER#
