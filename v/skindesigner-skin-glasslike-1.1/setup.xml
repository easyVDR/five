<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE setup SYSTEM "../../dtd/setup.dtd">

<setup>
    <menu>
    <submenu name="MainMenu" displaytext="{tr(submainmenu)}">
<!--
        <parameter type="int" name="mainmenuFadeTime" min="0" max="1000" displaytext="{tr(fadetime)}">50</parameter>
-->
        <parameter type="int" name="mainmenuNumMenuItems" min="6" max="20" displaytext="{tr(nummenuitems)}">8</parameter>
        <parameter type="bool" name="mainmenuIcons" displaytext="{tr(icons)}">1</parameter>
        <parameter type="bool" name="mainmenuItemNumber" displaytext="{tr(itemnumber)}">1</parameter>
        <parameter type="bool" name="mainmenuWidgetWeather" displaytext="{tr(widgetweather)}">1</parameter>
        <parameter type="bool" name="mainmenuWidgetSysInfo" displaytext="{tr(widgetsysinfo)}">1</parameter>
        <parameter type="bool" name="mainmenuWidgetRecordings" displaytext="{tr(widgetrecordings)}">0</parameter>
        <parameter type="int" name="mainmenuWidgetFadeime" min="0" max="3000" displaytext="{tr(widgetfadetime)}">0</parameter>
        <parameter type="bool" name="mainmenuTimerTypeIndicator" displaytext="{tr(timertypeindicator)}">1</parameter>
        <parameter type="bool" name="mainmenuRecBlink" displaytext="{tr(recblink)}">1</parameter>
        <parameter type="bool" name="mainmenuGlassEffect" displaytext="{tr(glasseffect)}">1</parameter>
    </submenu>
    <submenu name="DefaultMenu" displaytext="{tr(subdisplaymenudefault)}">
        <parameter type="int" name="defaultmenuNumMenuItems" min="6" max="20" displaytext="{tr(nummenuitems)}">14</parameter>
    </submenu>
    <submenu name="Channel" displaytext="{tr(subdisplaychannel)}">
        <parameter type="int" name="channelFadeTime" min="0" max="1000" displaytext="{tr(fadetime)}">50</parameter>
        <parameter type="bool" name="channelWidgetWeather" displaytext="{tr(widgetweather)}">1</parameter>
        <parameter type="bool" name="channelWidgetClock" displaytext="{tr(widgetclock)}">1</parameter>
        <parameter type="bool" name="channelWidgetBanner" displaytext="{tr(widgetbanner)}">1</parameter>
        <parameter type="bool" name="channelWidgetPoster" displaytext="{tr(widgetposter)}">1</parameter>
        <parameter type="bool" name="channelRecBlink" displaytext="{tr(recblink)}">0</parameter>
    </submenu>
    <submenu name="Replay" displaytext="{tr(subdisplayreplay)}">
        <parameter type="int" name="replayFadeTime" min="0" max="1000" displaytext="{tr(fadetime)}">50</parameter>
        <parameter type="bool" name="replayWidgetClock" displaytext="{tr(widgetclock)}">1</parameter>
        <parameter type="bool" name="replayWidgetBanner" displaytext="{tr(widgetbanner)}">1</parameter>
        <parameter type="bool" name="replayWidgetPoster" displaytext="{tr(widgetposter)}">1</parameter>
        <parameter type="bool" name="replayRecBlink" displaytext="{tr(recblink)}">0</parameter>
    </submenu>
    <submenu name="Volume" displaytext="{tr(subdisplayvolume)}">
        <parameter type="int" name="volumeFadeTime" min="0" max="1000" displaytext="{tr(fadetime)}">50</parameter>
    </submenu>
    <submenu name="Message" displaytext="{tr(subdisplaymessage)}">
        <parameter type="int" name="messageFadeTime" min="0" max="1000" displaytext="{tr(fadetime)}">500</parameter>
    </submenu>
    <submenu name="Audio" displaytext="{tr(subdisplayaudio)}">
        <parameter type="int" name="audioFadeTime" min="0" max="1000" displaytext="{tr(fadetime)}">50</parameter>
    </submenu>
    <submenu name="Schedules" displaytext="{tr(subdisplaymenuschedules)}">
        <parameter type="int" name="schedulesFadeTime" min="0" max="1000" displaytext="{tr(fadetime)}">50</parameter>
        <parameter type="int" name="schedulesDescriptionDelay" min="0" max="5000" displaytext="{tr(descriptiondelay)}">1000</parameter>
        <parameter type="int" name="schedulesNumMenuItems" min="6" max="20" displaytext="{tr(nummenuitems)}">12</parameter>
    </submenu>
    <submenu name="Timers" displaytext="{tr(subdisplaymenutimers)}">
        <parameter type="int" name="timersFadeTime" min="0" max="1000" displaytext="{tr(fadetime)}">50</parameter>
        <parameter type="int" name="timersDescriptionDelay" min="0" max="5000" displaytext="{tr(descriptiondelay)}">1000</parameter>
        <parameter type="int" name="timersNumMenuItems" min="6" max="12" displaytext="{tr(nummenuitems)}">7</parameter>
    </submenu>
    <submenu name="Recordings" displaytext="{tr(subdisplaymenurecordings)}">
        <parameter type="int" name="recordingsFadeTime" min="0" max="1000" displaytext="{tr(fadetime)}">50</parameter>
        <parameter type="int" name="recordingsDescriptionDelay" min="0" max="5000" displaytext="{tr(descriptiondelay)}">1000</parameter>
        <parameter type="int" name="recordingsNumMenuItems" min="6" max="12" displaytext="{tr(nummenuitems)}">8</parameter>
    </submenu>
    <submenu name="Channels" displaytext="{tr(subdisplaymenuchannels)}">
        <parameter type="int" name="channelsFadeTime" min="0" max="1000" displaytext="{tr(fadetime)}">50</parameter>
        <parameter type="int" name="channelsDescriptionDelay" min="0" max="5000" displaytext="{tr(descriptiondelay)}">2000</parameter>
        <parameter type="int" name="channelsNumMenuItems" min="6" max="20" displaytext="{tr(nummenuitems)}">12</parameter>
    </submenu>
    <submenu name="Plugins" displaytext="{tr(subplugins)}">
    <submenu name="TvGuideNg" displaytext="{tr(subtvguide)}">
        <parameter type="bool" name="tvguideGridLineHorizontal" displaytext="{tr(gridlinehorizontal)}">1</parameter>
        <parameter type="bool" name="tvguideGridLineVertical" displaytext="{tr(gridlinevertical)}">1</parameter>
        <parameter type="int" name="tvguideGridFontSizeHor" min="10" max="80" displaytext="{tr(gridfontsize)}">60</parameter>
        <parameter type="int" name="tvguideGridFontSizeVer" min="10" max="80" displaytext="{tr(gridfontsize)}">60</parameter>
        <parameter type="bool" name="tvguideRecBlink" displaytext="{tr(recblink)}">0</parameter>
    </submenu>
    </submenu>
    <submenu name="Vectra" displaytext="{tr(subspecial)}">
        <parameter type="bool" name="vectraSetup" displaytext="{tr(vectrasetup)}">0</parameter>
        <parameter type="bool" name="mainmenuWidgetUps" displaytext="UPS">0</parameter>
    </submenu>
