#!/bin/sh

set -e

case "$1" in
    configure)
        if [ ! -d /var/cache/eplists/episodes ]
        then
            cd /tmp
            wget --no-check-certificate https://www.eplists.de/eplists_full_utf8.cgi?action=dutf
            mv eplists_full_utf8.cgi?action=dutf eplists_full_utf8.tgz
            tar -xvzf eplists_full_utf8.tgz -C /var/cache/eplists/
            rm eplists_full_utf8.tgz
        fi
        chown -R vdr:vdr /var/cache/eplists
        chown -R vdr:vdr /var/lib/vdr/plugins/epgsearch/epgsearchuservars.conf
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0

#DEBHELPER#
